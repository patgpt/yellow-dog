{
  "name": "yellow-dog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:docs": "vitepress dev docs",
    "dev:site": "next dev --turbopack",
    "dev": "concurrently -c \"blue.bold,magenta.bold\" -p \"[{name}]\" --names \"DOCS,NEXT\" \"bun run dev:docs\" \"bun run dev:site\"",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "test": "bun run format:check && bun run lint",
    "test:fix": "bun run format && bun run lint:fix",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@eslint/css": "^0.4.0",
    "@eslint/markdown": "^6.2.2",
    "@tailwindcss/postcss": "^4.0.8",
    "@types/eslint-config-prettier": "^6.11.3",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "next": "15.1.7",
    "next-intl": "^0.0.0-canary-84fe6d0",
    "pino": "^9.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "eslint": "^9.21.0",
    "eslint-config-next": "15.1.7",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^15.4.3",
    "pino-pretty": "^10.3.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.8",
    "typescript": "^5.7.3",
    "vitepress": "^1.0.0-rc.44"
  },
  "lint-staged": {
    "*.{css,md,ts,tsx,json,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
